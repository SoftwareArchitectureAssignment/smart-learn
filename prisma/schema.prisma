generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String              @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  role               String              @default("student")
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  accounts           Account[]
  sessions           Session[]
  enrollments        Enrollment[]
  quizAttempts       QuizAttempt[]
  assessmentAttempts AssessmentAttempt[]
  learningPaths      LearningPath[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id                  String               @id @default(cuid())
  title               String
  description         String?              @db.Text
  thumbnail           String?
  sections            Section[]
  enrollments         Enrollment[]
  topics              CourseTopics[]
  learningPathCourses LearningPathCourse[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model Enrollment {
  id         String   @id @default(cuid())
  studentId  String
  courseId   String
  student    User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course     Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  enrolledAt DateTime @default(now())

  @@unique([studentId, courseId])
}

model Section {
  id        String    @id @default(cuid())
  title     String
  order     Int
  courseId  String
  course    Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  contents  Content[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Content {
  id        String      @id @default(cuid())
  title     String
  type      ContentType
  order     Int
  sectionId String
  section   Section     @relation(fields: [sectionId], references: [id], onDelete: Cascade)
  video     Video?
  document  Document?
  text      Text?
  quiz      Quiz?
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
}

enum ContentType {
  VIDEO
  DOCUMENT
  TEXT
  QUIZ
}

model Video {
  id        String  @id @default(cuid())
  contentId String  @unique
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  url       String
  duration  Int?
}

model Document {
  id        String  @id @default(cuid())
  contentId String  @unique
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  url       String
  fileType  String?
  fileSize  Int?
}

model Text {
  id        String  @id @default(cuid())
  contentId String  @unique
  content   Content @relation(fields: [contentId], references: [id], onDelete: Cascade)
  body      String  @db.Text
}

model Quiz {
  id           String        @id @default(cuid())
  contentId    String        @unique
  content      Content       @relation(fields: [contentId], references: [id], onDelete: Cascade)
  questions    Question[]
  attempts     QuizAttempt[]
  passingScore Int?
}

model Question {
  id        String   @id @default(cuid())
  quizId    String
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  text      String   @db.Text
  order     Int
  options   Option[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Option {
  id         String   @id @default(cuid())
  questionId String
  question   Question @relation(fields: [questionId], references: [id], onDelete: Cascade)
  text       String
  isCorrect  Boolean  @default(false)
  order      Int
}

model QuizAttempt {
  id          String   @id @default(cuid())
  quizId      String
  quiz        Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  studentId   String
  student     User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  score       Int
  totalScore  Int
  answers     Json
  feedback    String?  @db.Text
  attemptedAt DateTime @default(now())
}

// ============ Topics & Categories ============
model Topic {
  id                  String                    @id @default(cuid())
  name                String                    @unique
  description         String?                   @db.Text
  courses             CourseTopics[]
  assessmentQuestions AssessmentQuestionTopic[]
  createdAt           DateTime                  @default(now())
  updatedAt           DateTime                  @updatedAt
}

model CourseTopics {
  courseId  String
  topicId   String
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  topic     Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([courseId, topicId])
}

// ============ Assessment & Learning Path ============
model AssessmentQuestion {
  id        String                    @id @default(cuid())
  text      String                    @db.Text
  options   AssessmentOption[]
  topics    AssessmentQuestionTopic[]
  createdAt DateTime                  @default(now())
  updatedAt DateTime                  @updatedAt
}

model AssessmentQuestionTopic {
  questionId String
  topicId    String
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  topic      Topic              @relation(fields: [topicId], references: [id], onDelete: Cascade)
  createdAt  DateTime           @default(now())

  @@id([questionId, topicId])
}

model AssessmentOption {
  id         String             @id @default(cuid())
  questionId String
  question   AssessmentQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade)
  text       String
  isCorrect  Boolean            @default(false)
  order      Int
}

model AssessmentAttempt {
  id             String        @id @default(cuid())
  studentId      String
  student        User          @relation(fields: [studentId], references: [id], onDelete: Cascade)
  topicId        String
  totalQuestions Int
  score          Int
  totalScore     Int
  answers        Json
  attemptedAt    DateTime      @default(now())
  learningPath   LearningPath?
}

model LearningPath {
  id                  String               @id @default(cuid())
  assessmentAttemptId String               @unique
  assessmentAttempt   AssessmentAttempt    @relation(fields: [assessmentAttemptId], references: [id], onDelete: Cascade)
  studentId           String
  student             User                 @relation(fields: [studentId], references: [id], onDelete: Cascade)
  title               String
  description         String?              @db.Text
  status              LearningPathStatus   @default(NOT_STARTED)
  isEnrolled          Boolean              @default(false)
  enrolledAt          DateTime?
  courses             LearningPathCourse[]
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
}

model LearningPathCourse {
  id             String       @id @default(cuid())
  learningPathId String
  learningPath   LearningPath @relation(fields: [learningPathId], references: [id], onDelete: Cascade)
  courseId       String
  course         Course       @relation(fields: [courseId], references: [id], onDelete: Cascade)
  order          Int
  reason         String?      @db.Text
  isCompleted    Boolean      @default(false)
  createdAt      DateTime     @default(now())

  @@unique([learningPathId, courseId])
}

// ============ Enums ============
enum LearningPathStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
  ABANDONED
}
